
<br><br>
<div class="container">
  <div class="pull-right">
    <%= link_to "New Thread", new_forum_thread_path, class: "btn btn-success" %>
  </div>
  <div class="pull-right" style="margin-right: 10px">
    <%= search_form_for @q, html: { class: "form-inline" } do |f| %>
      <%= f.search_field :subject_or_forum_posts_body_cont, placeholder: "Search...", class: "form-control" %>
    <% end %>
  </div>
  <h1 class="page-header" style="color: white; font-family: 'Knewave', cursive;">Forum Timeline</h1>
  <section id=timeline>
    <%= render @forum_threads %>  
   </section>
</div>
